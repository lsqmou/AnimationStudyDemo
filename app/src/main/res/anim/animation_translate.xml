<?xml version="1.0" encoding="utf-8"?>
<!--使用<tracslate>标签表示平移动画-->
<!--
//以下参数是4种动画都有的公共属性
android:duration="3000"             动画持续时间（ms）,必须设置，动画才有效果
android:startOffset="1000"          动画延迟开始时间
android:fillBefore="true"           动画播放完后，视图是否停留在开始状态，默认为true
android:fillAfter="false"           动画播放完后，视图是否停留在结束状态，优先于fillBefore值，默认false
android:fillEnabled="true"          是否应用fillBefore值，对fillAfter无影响，默认为true
android:repeatMode="restart"        重复播放动画模式，restart代表正序播放，reverse代表倒序播放，默认restart
android:repeatCount="0"             重放次数（播放次数=重放次数+1），infinite时无限重复
//一下是平移动画特有属性
android:fromXDelta="0"              视图在水平方向x移动的起始值
android:toXDelta="500"              视图在水平方向x移动的结束值

android:fromYDelta="0"              视图在水平方向y移动的起始值
android:toYDelta="500"              视图在水平方向y移动的结束值
-->
<translate xmlns:android="http://schemas.android.com/apk/res/android"
           android:duration="3000"
           android:startOffset="1000"
           android:fillBefore="true"
           android:fillAfter="false"
           android:fillEnabled="true"
           android:repeatMode="restart"
           android:repeatCount="0"

           android:fromXDelta="0"
           android:toXDelta="500"

           android:fromYDelta="0"
           android:toYDelta="500"

/>